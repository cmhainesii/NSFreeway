@{
    ViewData["title"] = "Select Road";
}

@model IEnumerable<NSFreeway.Models.HighwayModel>


<html>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">@ViewData["title"]</h1>
        <div class="row">
            @foreach (var highway in Model)
            {
                <div class="col-md-3 mb-3">
                    <a class="btn btn-primary btn-lg w-50" asp-action="AddConstructionForm"
                        asp-route-roadId="@highway.Id">@highway.GetShortName()
                    </a>
                </div>
            }
        </div>
    </div>
</body>

</html>
