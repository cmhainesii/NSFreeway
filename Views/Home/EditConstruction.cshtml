@{
    ViewData["title"] = "Edit Construction Project";
}

@model NSFreeway.Models.RoadConstruction



<body>
    <h1 class="display-4 text-center mb-5">@ViewData["title"]</h1>
    <form asp-action="EditConstruction" asp-controller="Home" method="post">
        <input type="hidden" asp-for="RoadId" />
        <input type="hidden" asp-for="Id" />    
        <div class="form-group">
            <label for="startDate">Start Date:</label>
            <input type="date" asp-for="StartDate" class="form-control" id="startDate" name="startDate" required />
        </div>
        <div class="form-group">
            <label for="endDate">End Date:</label>
            <input type="date" asp-for="EndDate" id="endDate" name="endDate" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="reason">Reason:</label>
            <input type="text" asp-for="Reason" class="form-control" id="reason" name="reason" required />
        </div>
        <div class="form-group">
            <label for="impact">Impact:</label>
            <input type="text" asp-for="Impact" class="form-control" id="impact" name="impact" required />
        </div>
        <div class="form-group">
            <label for="locationDescription">Location Description:</label>
            <input type="text" class="form-control" asp-for="LocationDescription" id="locationDescription" name="locationDescription" required />
        </div>
        <div>
            <button type="submit" class="btn btn-success mt-4 me-5">Submit</button>
            <a asp-action="Construction" class="btn btn-danger mt-4">Cancel</a>
        </div>
    </form>
</body>
